<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Organisasi">

    <!-- LinearLayout utama untuk membungkus semua elemen anak -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Judul -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Struktur Organisasi Rekayasa Pertanian dan Biosistem FTS UIKA Bogor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Deskripsi -->
        <TextView
            android:id="@+id/tvSubHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Prodi dan Sek. Prodi"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="24dp" />

        <!-- LinearLayout Ketua Program Studi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_border"
            android:elevation="4dp">

            <!-- Foto Ketua -->
            <ImageView
                android:id="@+id/imgKetua"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_ketua"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <!-- Nama dan Jabatan -->
                <TextView
                    android:id="@+id/tvKetuaName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Hablinnur Al Kindi, S.T.P., M.S."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvKetuaNIDN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIK/NIDN : 410100519/407028805"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvKetuaPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ASISTEN AHLI"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_green_dark" />
            </LinearLayout>
        </LinearLayout>

        <!-- LinearLayout Sekretaris Program Studi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/rounded_border"
            android:elevation="4dp">

            <!-- Foto Sekretaris -->
            <ImageView
                android:id="@+id/imgSekretaris"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_sekretaris"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <!-- Nama dan Jabatan -->
                <TextView
                    android:id="@+id/tvSekretarisName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Setya Permana Sutisna, S.T.P., M.Si."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvSekretarisNIDN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIK/NIDN : 410100514/406038901"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvSekretarisPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LEKTOR"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_green_dark" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tombol Keluar -->
        <Button
            android:id="@+id/btnKeluar"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/button"
            android:text="Kembali ke Halaman Utama"
            android:textColor="@android:color/white"
            android:onClick="goToMainPage" />
    </LinearLayout>
</ScrollView>
