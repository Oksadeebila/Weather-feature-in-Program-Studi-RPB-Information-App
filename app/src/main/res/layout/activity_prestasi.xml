<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Title -->
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prestasi"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <!-- Achievement Image -->
        <ImageView
            android:id="@+id/achievement_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/prestasi"
            android:scaleType="fitCenter"
            android:layout_marginBottom="16dp" />

        <!-- Achievement Description -->
        <TextView
            android:id="@+id/achievement_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JUARA 1 GELAR INOVASI DAERAH KABUPATEN BOGOR KATEGORI MAHASISWA TAHUN 2023"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Footer Note -->
        <TextView
            android:id="@+id/footer_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semoga Berkah dan Bermanfaat Ilmunya Untuk Kemajuan UIKA dan Kemaslahatan Ummat"
            android:textSize="16sp"
            android:textStyle="italic"
            android:background="#FFCC00"
            android:padding="12dp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Exit Button -->
        <Button
            android:id="@+id/exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/button"
            android:text="Kembali ke Halaman Utama"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>